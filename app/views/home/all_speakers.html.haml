.l-page_width_page
  = render :partial => 'layouts/logo'
  .l-page_gap-top-out_50.l-page_gap-bottom-out_40
    .l-page_align_center.b-title__line
      .b-title__inner
        %h2.b-title
          Докладчики
  .clearfix
    .l-page_float_left.l-page_width_220{:style => 'width: 220px'}
      %ul.b-filter.b-filter_type_vert.clearfix
        - Section.without_general.each do |section|
          %li.b-filter__item
            %a.b-filter__link
              = section.name
        - Specialization.without_general.each do |spec|
          %li.b-filter__item
            %a.b-filter__link
              = spec.name
    .l-page_float_right.l-page_width_710{:style => 'width: 710px'}

      .b-reporters__persons.b-reporters__persons_type_all.clearfix
        - batch_counter = 0
        - Speaker.find_in_batches(:batch_size => 4) do |group|
          - batch_counter += 1
          - group.each do |speaker|
            - speeches = speaker.speeches.without_startup_battles
            - company = speaker.company
            - if speeches && company
              .b-reporters__person
                .b-reporters__person-photo
                  = image_tag speaker.photo_url, :class => "b-reporters__person-photo-img"
                %h2.b-reporters__person-name
                  = speaker.full_name
                - speeches.each do |speech|
                  %p.b-reporters__person-theme
                    .js-spec
                      %ul.b-icon.b-icon_type_into-carousel
                        %li.b-icon__item
                          %span.b-icon__icon{:class => 'b-icon__icon_' + icon_for_speakers(speech) + '-s'}
                        - if speech.specialization2
                          %li.b-icon__item
                            %span.b-icon__icon{:class => 'b-icon__icon_' + icon_for_speakers(speech, :second => true) + '-s'}
                      %a.b-reporters__person-theme-link{:href => "/speakers/#{speech.permalink}",
                                                        :data => { :section => speech.section.name,
                                                                   :specialization => speech.specialization.name }}
                        = "\&laquo;#{speech.title}&raquo;".html_safe
                %p.b-reporters__person-company
                  %a.b-reporters__person-company-link{:href => company.url, :target => '_blank'}>= company.name
                  ,
                  = speaker.city.name