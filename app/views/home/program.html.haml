%style
  :sass
    #program td
      width: 33%
      min-height: 50px
      padding: 5px
      margin: 2px
      font-size: 1.4em

      .common
        background-color: #dddddd

      .startup
        background-color: #009999
      .product
        background-color: #62DA97
      .factory
        background-color: #F87085


    .speeches

      ul.startup .speech-title
        color: #9D0019
      ul.product .speech-title
        color: #007241
      ul.factory .speech-title
        color: #130873
      ul.common .speech-title
        color: #A67800
      ul
        li
          list-style: none
          margin-bottom: 10px

          .speaker-name
            font-size: 1.4em

          .speech-title
            font-size: 1.2em  
            




