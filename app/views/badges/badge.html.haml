%style{:type => 'text/css'}
  :plain
    body { background-color: white; }
    #badge {
      width: 100%;
      position: absolute;
    }
    #first_name, #last_name {
      text-align: center;
      font-family: 'PFDinDisplayPro-Medium' !important;
    }
    #company, #city {
      text-align: center;
      font-family: 'PFDinDisplayPro-Light' !important;
    }
    #first_name { font-size: 42px; }
    #last_name { font-size: 32px; margin-top: -3mm; }
    #company { font-size: 16px; margin-top: 2mm; }
    #city { font-size: 16px; }
    
#badge
  #first_name
    = @user.first_name
  #last_name
    = @user.last_name
  #company
    - if @user.instance_of? Speaker
      = @user.company.name
    - else
      = @user.company
  #city
    - if @user.instance_of? Speaker
      = @user.city.name
    - else
      = @user.city
