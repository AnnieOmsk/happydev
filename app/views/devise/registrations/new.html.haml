-# encoding: utf-8

.l-page_width_page.l-page_gap-bottom_50
  = render :partial => 'layouts/logo'
  %section.clearfix.b-register
    .b-register__title-inner
      %h2.b-register__title
        Регистрация
    = form_for(resource, :as => resource_name, :url => registration_path(resource)) do |f|
      -# = f.hidden_field :student, :value => (params[:student] || resource.student).to_s == 'true' ? true : false
      .clearfix
        .b-register__fields-inner
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Имя"
              %span.b-register__inputs-inner
                = f.text_field :first_name, :class => "b-register__input_text"
                %span.b-register__required *
              %i.b-register__error
                = error_messages_for :first_name, resource
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Фамилия"
              %span.b-register__inputs-inner
                = f.text_field :last_name, :class => "b-register__input_text"
                %span.b-register__required *
              %i.b-register__error
                = error_messages_for :last_name, resource
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Пароль"
              %span.b-register__inputs-inner
                = f.password_field :password, :class => "b-register__input_password"
                %span.b-register__required *
              %i.b-register__error
                = error_messages_for :password, resource
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Повторите пароль"
              %span.b-register__inputs-inner
                = f.password_field :password_confirmation, :class => "b-register__input_password"
                %span.b-register__required *
              %i.b-register__error
                = error_messages_for :password_confirmation, resource
        .b-register__fields-inner.b-register__fields-inner_float_right
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Электронная почта"
              %span.b-register__inputs-inner
                = f.email_field :email, :class => "b-register__input_email"
                %span.b-register__required *
              %i.b-register__error
                = error_messages_for :email, resource
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Компания / ВУЗ"
              %span.b-register__inputs-inner
                = f.text_field :company, :class => "b-register__input_text"
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Город"
              %span.b-register__inputs-inner
                = f.text_field :city, :class => "b-register__input_text"
          .b-register__fields
            %label.b-register__label
              %span.b-register__label-text
                = f.label "Специализация"
              %span.b-register__inputs-inner
                = f.select :professional, [['Дизайн', 'Дизайн'],['Разработка', 'Разработка'], ['Управление', 'Управление']], { :include_blank => true }, :class => "b-register__select"
              %i.b-register__error
                = error_messages_for :professional, resource
      .b-register__fields
        %label.b-register__label
          %span.b-register__label-text
            = f.label "Я - студент"
          %span.b-register__inputs-inner{:style => 'width: 500px'}
            = f.check_box :student, :checked => (params[:student] || resource.student).to_s == 'true' ? true : false, :class => 'b-register__student'
            %span.b-register__student_notice.b-register__text_style_small
              == На регистрации надо будет предъявить студенческий билет
      %p.b-register__text.b-register__text_type_small.l-page_align_center
        Нажимая на кнопку «Зарегистрироваться», вы подтверждаете свое согласие с тем, что &laquo;Личные данные&raquo; будут использованы для изготовления бейджа.
      %p.l-page_align_center
        %input.b-button{:type => "submit", :value => "Зарегистрироваться"}/
        &nbsp; &nbsp; Я уже регистрировался,
        =link_to "хочу войти", '/registration/login', :class => 'b-link'
